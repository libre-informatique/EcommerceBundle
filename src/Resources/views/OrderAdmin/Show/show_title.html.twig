{% import '@SyliusUi/Macro/flags.html.twig' as flags %}

<a class="navbar-brand" href="#">
    {{ 'librinfo.label.order'|trans() }} #{{ admin.toString(object) }}
</a>
<p class="navbar-text" style="color: #EEE">{{ object.checkoutCompletedAt|format_date }}</p>
<p class="navbar-text" style="color: #EEE">
    {% include('LibrinfoEcommerceBundle:OrderAdmin:_state_label.html.twig') with {'category': 'order', 'value': object.state} %}
</p>
<p class="navbar-text" style="color: #EEE">{{ object.total|sylius_price(object.currencyCode, object.exchangeRate) }}</p>
<p class="navbar-text" style="color: #EEE">{{ object.currencyCode }}</p>
<p class="navbar-text" style="color: #EEE">{{ flags.fromLocaleCode(object.localeCode) }}{{ object.localeCode|locale }}</p>
<p class="navbar-text" style="color: #EEE">
    {{ 'librinfo.label.purchased_from'|trans }}
    <strong>{{ object.channel }}</strong>
</p>